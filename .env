# =============================================================================
# NetcoRo AI Multi-Agent System - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# API Keys and Authentication
# -----------------------------------------------------------------------------

# OpenAI Configuration (for strategic/business queries)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_STRATEGIC_MODEL=gpt-4o
OPENAI_BUSINESS_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude (optional alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Google Gemini (optional alternative)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# -----------------------------------------------------------------------------
# Local AI Configuration (Ollama)
# -----------------------------------------------------------------------------

# Ollama Server Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.2:latest
OLLAMA_OPERATIONAL_MODEL=llama3.2:latest
OLLAMA_ANALYSIS_MODEL=llama3.2:latest
OLLAMA_TACTICAL_MODEL=llama3.2:latest

# Model Performance Settings
OLLAMA_TIMEOUT=120
OLLAMA_MAX_TOKENS=2000
OLLAMA_TEMPERATURE=0.2

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL (Production Database)
DATABASE_URL=postgresql://netcoro_user:your_password@localhost:5432/netcoro_agents
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=netcoro_agents
POSTGRES_USER=netcoro_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SSL_MODE=prefer

# SQLite (Local/Development Database)
SQLITE_DB_PATH=data/netcoro_agents.db
LOCAL_KB_DB_PATH=data/local_kb.db
MEMORY_DB_PATH=data/agent_memory.db

# ChromaDB (Vector Database)
CHROMA_DB_PATH=data/chroma_db
CHROMA_COLLECTION_NAME=netcoro_vectors
CHROMA_PERSIST_DIRECTORY=data/chroma_persist

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------

# MCP Server Ports
MCP_DATABASE_PORT=8001
MCP_LOGGING_PORT=8002
MCP_CALENDAR_PORT=8003
MCP_WEATHER_PORT=8004
MCP_NETCORO_PORT=8005

# MCP Server URLs
MCP_DATABASE_URL=http://localhost:8001
MCP_LOGGING_URL=http://localhost:8002
MCP_CALENDAR_URL=http://localhost:8003
MCP_WEATHER_URL=http://localhost:8004
MCP_NETCORO_URL=http://localhost:8005

# -----------------------------------------------------------------------------
# External Service APIs
# -----------------------------------------------------------------------------

# Weather Service
WEATHER_API_KEY=your_weather_api_key
WEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Calendar Integration
GOOGLE_CALENDAR_CREDENTIALS_PATH=credentials/google_calendar_credentials.json
OUTLOOK_CLIENT_ID=your_outlook_client_id
OUTLOOK_CLIENT_SECRET=your_outlook_client_secret

# Financial Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
YAHOO_FINANCE_API_KEY=your_yahoo_finance_key

# News and Market Data
NEWS_API_KEY=your_news_api_key
BLOOMBERG_API_KEY=your_bloomberg_api_key

# Communication Services
SLACK_BOT_TOKEN=your_slack_bot_token
DISCORD_BOT_TOKEN=your_discord_bot_token
TEAMS_WEBHOOK_URL=your_teams_webhook_url

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@netcoro.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@netcoro.com

# -----------------------------------------------------------------------------
# NetcoRo Company Configuration
# -----------------------------------------------------------------------------

# Company Information
COMPANY_NAME=NetcoRo
COMPANY_DOMAIN=netcoro.com
COMPANY_TIMEZONE=UTC
COMPANY_HEADQUARTERS=San Francisco, CA
COMPANY_INDUSTRY=Technology

# Business Hours
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=18:00
BUSINESS_DAYS=monday,tuesday,wednesday,thursday,friday

# Organizational Structure
CEO_AGENT_ID=ceo_agent_001
CTO_AGENT_ID=cto_agent_001
CFO_AGENT_ID=cfo_agent_001
HR_AGENT_ID=hr_agent_001
SALES_AGENT_ID=sales_agent_001
LEGAL_AGENT_ID=legal_agent_001
OPS_AGENT_ID=ops_agent_001

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your_secret_key_for_sessions

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
MAX_WORKERS=8

# UI Configuration
STREAMLIT_PORT=8501
GRADIO_PORT=7860
FASTAPI_PORT=8000

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:7860
CORS_ALLOW_CREDENTIALS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HTTPS_REDIRECT=false
SECURE_COOKIES=false

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
MAX_CACHE_SIZE=1000
REDIS_URL=redis://localhost:6379

# Memory Management
MAX_MEMORY_SIZE=1000
MEMORY_CLEANUP_INTERVAL=3600
CONVERSATION_HISTORY_LIMIT=100

# Agent Performance
AGENT_RESPONSE_TIMEOUT=30
AGENT_MAX_RETRIES=3
AGENT_BACKOFF_FACTOR=2

# Concurrent Processing
MAX_CONCURRENT_QUERIES=10
ASYNC_BATCH_SIZE=5
WORKER_POOL_SIZE=4

# -----------------------------------------------------------------------------
# Monitoring and Logging
# -----------------------------------------------------------------------------

# Logging Configuration
LOG_FILE_PATH=logs/netcoro_agents.log
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Metrics and Analytics
METRICS_ENABLED=true
ANALYTICS_ENDPOINT=https://analytics.netcoro.com/api/events
HEALTH_CHECK_INTERVAL=60

# Error Tracking
SENTRY_DSN=your_sentry_dsn
ERROR_REPORTING_ENABLED=true

# Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=netcoro-agents
APM_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# File Storage and Data
# -----------------------------------------------------------------------------

# Local File Storage
DATA_DIRECTORY=data
UPLOADS_DIRECTORY=uploads
TEMP_DIRECTORY=temp
BACKUP_DIRECTORY=backups

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2
S3_BUCKET_NAME=netcoro-agents-data

# Azure Storage (Optional)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=netcoro-agents

# -----------------------------------------------------------------------------
# Development and Testing
# -----------------------------------------------------------------------------

# Development Settings
DEV_MODE=true
AUTO_RELOAD=true
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test_netcoro_agents.db
TEST_OLLAMA_URL=http://localhost:11434
RUN_INTEGRATION_TESTS=false

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_BETA_AGENTS=false
ENABLE_ADVANCED_ANALYTICS=true

# -----------------------------------------------------------------------------
# Backup and Recovery
# -----------------------------------------------------------------------------

# Backup Configuration
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Recovery Settings
RECOVERY_MODE=false
RECOVERY_POINT_OBJECTIVE=1h
RECOVERY_TIME_OBJECTIVE=15m

# -----------------------------------------------------------------------------
# Agent-Specific Configuration
# -----------------------------------------------------------------------------

# CEO Agent Settings
CEO_AGENT_STRATEGY_MODEL=gpt-4o
CEO_AGENT_VISION_CONTEXT=5_year_growth_plan
CEO_AGENT_DECISION_THRESHOLD=0.8

# CTO Agent Settings
CTO_AGENT_TECH_STACK=python,javascript,docker,kubernetes
CTO_AGENT_ARCHITECTURE_PRINCIPLES=microservices,api_first,security_by_design

# CFO Agent Settings
CFO_AGENT_BUDGET_ALERTS=true
CFO_AGENT_FINANCIAL_THRESHOLD=10000
CFO_AGENT_REPORTING_FREQUENCY=weekly

# HR Agent Settings
HR_AGENT_ONBOARDING_ENABLED=true
HR_AGENT_PERFORMANCE_TRACKING=true
HR_AGENT_COMPLIANCE_CHECKS=true

# Sales Agent Settings
SALES_AGENT_CRM_INTEGRATION=true
SALES_AGENT_LEAD_SCORING=true
SALES_AGENT_PIPELINE_TRACKING=true

# Legal Agent Settings
LEGAL_AGENT_COMPLIANCE_MODE=strict
LEGAL_AGENT_DOCUMENT_REVIEW=true
LEGAL_AGENT_RISK_ASSESSMENT=true

# Operations Agent Settings
OPS_AGENT_WORKFLOW_AUTOMATION=true
OPS_AGENT_RESOURCE_OPTIMIZATION=true
OPS_AGENT_INCIDENT_RESPONSE=true